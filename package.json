{
  "name": "fitcha-sports-platform",
  "private": true,
  "version": "1.0.0",
  "description": "Global sports social platform connecting athletes, celebrities, and sports media",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "npm run type-check && npm run lint && vite build",
    "build:prod": "npm run clean && npm run build",
    "preview": "vite preview",
    "clean": "rimraf dist",
    "lint": "eslint . --report-unused-disable-directives --max-warnings 0",
    "lint:fix": "eslint . --fix",
    "lint:check": "eslint . --max-warnings 0",
    "format": "prettier --write \"src/**/*.{ts,tsx,js,jsx,json,css,md}\"",
    "format:check": "prettier --check \"src/**/*.{ts,tsx,js,jsx,json,css,md}\"",
    "type-check": "tsc --noEmit",
    "type-check:watch": "tsc --noEmit --watch",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "test:run": "vitest run",
    "test:coverage": "vitest --coverage",
    "test:watch": "vitest --watch",
    "pre-commit": "npm run lint:check && npm run format:check && npm run type-check && npm run test:run",
    "firebase:emulators": "firebase emulators:start",
    "firebase:deploy": "npm run build:prod && firebase deploy",
    "firebase:deploy:hosting": "npm run build:prod && firebase deploy --only hosting",
    "firebase:deploy:functions": "firebase deploy --only functions",
    "firebase:deploy:firestore": "firebase deploy --only firestore",
    "firebase:deploy:staging": "npm run build && firebase deploy --project staging",
    "analyze": "npm run build && npx vite-bundle-analyzer dist/stats.html",
    "security:audit": "npm audit --audit-level moderate",
    "security:fix": "npm audit fix",
    "deps:update": "npx npm-check-updates -u",
    "deps:check": "npx npm-check-updates"
  },
  "dependencies": {
    "date-fns": "^3.0.0",
    "firebase": "^10.14.1",
    "framer-motion": "^10.16.16",
    "lucide-react": "^0.344.0",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "react-hot-toast": "^2.4.1",
    "react-intersection-observer": "^9.5.3",
    "react-router-dom": "^6.22.3",
    "react-use-gesture": "^9.1.3"
  },
  "devDependencies": {
    "@eslint/js": "^9.9.1",
    "@testing-library/jest-dom": "^6.6.3",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^14.6.1",
    "@types/react": "^18.3.5",
    "@types/react-dom": "^18.3.0",
    "@vitejs/plugin-react": "^4.3.1",
    "@vitest/coverage-v8": "^1.0.0",
    "autoprefixer": "^10.4.18",
    "eslint": "^9.9.1",
    "eslint-plugin-react-hooks": "^5.1.0-rc.0",
    "eslint-plugin-react-refresh": "^0.4.11",
    "eslint-plugin-unused-imports": "^4.1.4",
    "firebase-tools": "^13.0.0",
    "globals": "^15.9.0",
    "jsdom": "^26.1.0",
    "postcss": "^8.4.35",
    "tailwindcss": "^3.4.1",
    "typescript": "^5.5.3",
    "typescript-eslint": "^8.3.0",
    "vite": "^5.4.2",
    "vitest": "^1.0.0"
  },
  "keywords": [
    "sports",
    "social-network",
    "react",
    "typescript",
    "firebase",
    "ai",
    "ar",
    "iot"
  ],
  "author": "Fitcha Team",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/fitcha/fitcha-platform.git"
  },
  "bugs": {
    "url": "https://github.com/fitcha/fitcha-platform/issues"
  },
  "homepage": "https://fitcha.app"
}
